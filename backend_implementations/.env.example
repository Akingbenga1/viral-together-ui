# .env.example - Copy this to .env and update with your actual values

# Database Configuration (existing)
DATABASE_URL=postgresql://username:password@localhost/viral_together
TEST_DATABASE_URL=postgresql://username:password@localhost/viral_together_test

# JWT Configuration (existing)
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (NEW)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=noreply@viraltogether.com
FROM_NAME=Viral Together

# Frontend Configuration (NEW)
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional, for background tasks)
# REDIS_URL=redis://localhost:6379/0

# Email Service Provider Options (choose one)
# Option 1: Gmail (for development)
# Use the settings above with Gmail app password

# Option 2: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@viraltogether.com

# Option 3: Amazon SES
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# SES_FROM_EMAIL=noreply@viraltogether.com

# Option 4: Mailgun
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_FROM_EMAIL=noreply@viraltogether.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security Settings (NEW)
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
MAX_PASSWORD_RESET_ATTEMPTS_PER_HOUR=3

# Analytics Configuration (NEW)
ANALYTICS_RETENTION_MONTHS=24  # How long to keep analytics data
ENABLE_MOCK_ANALYTICS_DATA=true  # Set to false in production